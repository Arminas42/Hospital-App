@model HospitalApp.ViewModels.EditAppointmentVM
    <div class="col-md-4">
        <section>
            <form asp-action="Edit" method="post" runat="server">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="@Model.Appointment.DoctorId" class="form-control" type="hidden" value="@Model.Appointment.DoctorId"/>            
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Date"></label>
@*                    @Html.TextBoxFor(m => m.Date.Date, "{0:yyyy-MM-dd}", htmlAttributes: new {  @class = "form-control", @id = "Date",@name ="Date", type = "date"})
*@                    @Html.TextBox("Date", Model.Date, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @id = "Date", @name = "Date", type = "date"})
@*                    <input asp-for="@Model.Date" class="form-control" value="@Model.Date" type="date" />
*@                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>
                <div>
                    <select asp-for="@Model.Time" asp-items="@Model.Times"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Appointment.State"></label>
                    <input asp-for="@Model.Appointment.State" class="form-control" value="@Model.Appointment.State" />
                    <span asp-validation-for="@Model.Appointment.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Appointment.Patient.Tab_number"></label>
                    <input asp-for="@Model.Appointment.Patient.Tab_number" type="text" class="form-control @(Model.Appointment.Patient == null ? "" :"disabled")" value="@(Model.Appointment.Patient == null ? "No id" : Model.Appointment.Patient.Tab_number)" />
                    <span asp-validation-for="@Model.Appointment.Patient.Tab_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </section>
    </div>