@model HospitalApp.Models.Prescription 
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div class="text-danger"></div>
            <div class="form-group">
                <label>Prescription expires:</label>
                <input class="form-control" type="date" asp-for="ExpirationDate" />
            </div>
            <div class="form-group">
                <label>Drug</label>
                <select id="Drug" name="DrugId" style="width: 200px;">
                </select>
            </div>
            <div class="form-group">
                <label>Patient</label>
                <select id="PatientInput" name="PatientId" style="width: 200px;">
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create a prescription</button>
        </form>
    </div>
</div>  
@section Scripts
{ 
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/select2/js/select2.js"></script>
}